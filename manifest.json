{
  "manifest_version": 3,
  "name": "TikTok AI Detector",
  "version": "1.0",
  "description": "Detecta si un video de TikTok es generado por IA",
  "permissions": [
    "activeTab", 
    "scripting"
  ],
  "host_permissions": [
    "https://www.tiktok.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["content.js"]
    }
  ]
}